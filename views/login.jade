extends layout

block body
  div(ng-controller='LoginCtrl')
    nav
        div.container-fluid
            div.navbar-header.col-xs-12
                div.text-center.title-text Admin Login
    form.text-center(name="loginForm", ng-submit="submit()")
        div.row.login
            div.col-xs-10.col-xs-offset-1.col-md-4.col-md-offset-4
                div.form-input
                    span.form-input Username:
                    input(type="text", ng-model="$parent.username")
                div.form-input
                    span.form-input Password:
                    input(type="password", ng-model="$parent.password")
        
        div.row.text-center
            div.form-input
                button.submit(type="submit").
                    Submit

  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/lib/angular/angular-route.js')