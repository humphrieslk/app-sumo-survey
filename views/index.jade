extends layout

block body

  div(ng-controller='SurveyCtrl', ng-cloak)
    nav
        div.container-fluid
            div.navbar-header.col-xs-12
                div.text-center.title-text Survey
    div.container-fluid
        div.row.survey(ng-show="question")
            div.col-xs-10.col-xs-offset-1.col-md-8.col-md-offset-2
                div.text-center.question {{question.question_body}}
                        form.text-center(name="surveyForm", ng-submit="submitSurvey()")
                                div.row.answers(ng-repeat="answer in answers")
                                    div.col-xs-2.col-md-1.col-md-offset-4.text-center
                                        input(type="radio", name="surveyAnswer", ng-value="answer", ng-model="$parent.selectedAnswer", required)  
                                    div.col-xs-10.col-md-3
                                        span.answer-text{{answer.answer_body}}
                                div
                                    button.submit(type="submit") Submit
        div.row(ng-show="question")
            div.row.progress-indicator
                div.progress.col-xs-10.col-xs-offset-1.col-md-8.col-md-offset-2
                    div.progress-bar(role="progressbar", aria-valuenow="{{percentage}}", aria-valuemin="0", aria-valuemax="100", style="width : {{percentageStyle}}")
                div.text-center.progress-text.col-xs-10.col-xs-offset-1.col-md-8.col-md-offset-2
                    {{percentage}}% Complete
            
        div.row.text-center(ng-show="!question") 
            div.col-xs-12.no-questions
                {{noQuestionText}}


  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/lib/angular/angular-route.js')