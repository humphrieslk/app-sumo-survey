extends layout

block body
  div(ng-controller='SurveyCtrl')
    nav
        div.container-fluid
            div.navbar-header.col-xs-12
                div.text-center.title-text Survey
    div.container-fluid
        div.survey(ng-show="question")
            div.text-center.question {{question.question_body}}
                    form.text-center(name="surveyForm", ng-submit="submitSurvey()")
                        div.survey-block
                            div.answers(ng-repeat="answer in answers")
                                input(type="radio", name="surveyAnswer", ng-value="answer", ng-model="$parent.selectedAnswer", required)  
                                span.answer-text{{answer.answer_body}}
                            div
                                button.submit(type="submit") Submit

        div.text-center(ng-show="!question") 
            div.col-xs-12.no-questions
                {{noQuestionText}}

  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/lib/angular/angular-route.js')
